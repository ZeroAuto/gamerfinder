<div class="row">
  <!-- - - - - - - - My Matches - - - - - - - -->
  <div class = "large-4 columns">
    <div class = "my-matches">
      <% if current_user_is_owner? %>
        <%= render 'my_profile' %>
      <% end %>
    </div>
  </div>


  <!-- - - - - - - - My Answers - - - - - - - -->
  <div class = "large-8 columns">

    <div class="my-answers">
      <div class="row">
        <div class = "large-2 columns">
          <%= image_tag(@user.xbox_gamer_info.avatar_img_url) if @user.xbox_gamer_info.present? %>
        </div>
        <div class = "large-10 columns">
          <h2 class="subheader"><%= current_user_is_owner? ? "My" : "#{@user.name}'s" %> Responses </h2> 
          <%= link_to "edit", new_xbox_gamer_info_path if current_user_is_owner? %>
        </div>
      </div>
      <hr>
       
        <% Question.all.each do |question| %>
          <h5 class="subheader question" style="color:black">
            <%= question.inquiry %>? <span class="answer" style="color:blue"><%= question.responses.find_by_user_id(params[:id]).answer.choice %></span>
          </h5>
        <% end %>
      </div>    
    </div>
  </div>
</div>



