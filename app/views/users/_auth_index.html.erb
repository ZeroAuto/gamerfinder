  <div class = "large-12 columns">

<!-- creates block grid (3 panels wide for large screen, 1-wide for mobile) -->
    <ul class="small-block-grid-1 large-block-grid-3">
      <% current_user.comparisons.order('match_percent').reverse.each do |friendship| %>
      <% this_user_id = friendship.compared_user.id %>
        <!-- - - - - - - - - - - - - - LOGGED IN USER INFO CARD - - - - - - - - - - - -->
        <li>
          <div class="logged-in-panel">
            <div class="panel-container">
          <!-- - - - - - - - - - - - user graphic + match% bar - - - - - - - -->
              <div class="row">
                <div class="large-4 columns">
                  <%if  User.find(this_user_id).xbox_gamer_info.present? %>
                    <%= image_tag(User.find(this_user_id).xbox_gamer_info.avatar_img_url, size: '100x200') %>
                  <% else %>
                     <%= image_tag "https://s3.amazonaws.com/OKGamer/userplaceholder.png?AWSAccessKeyId=ASIAIOFLECZKCWG2I5UA&Expires=1383684711&Signature=gx9a8rpCRe8EgddQFNtFAcM5%2Bp0%3D&x-amz-security-token=AQoDYXdzEE0asAK5YMHLH3Knqb4agiC0OZ/uFzkIN/jhj8GFbNCeBcEgSl8UkUsvE5QSMfT/6v%2BIXCIBmtSqUJiZJzJoc8XC6KpHRjXpGv49R4Elx8cA67m09NAaxrjYWIxtN7sJclGi1Hmfuy3HjQkA9cowRmvTXTBD0BtL0cPJUiK7IHASdpy%2B%2BIOEj9h5xZMeo472m8Z27h3DlkQZ8XWzmN/pQHn98Ort8NPEXbbEGJqF1zJM6dBVyKSU0/BvXGlVwCSNJI7XPf54bcvrT%2BxaBX9nss5936h9/MJh/Y%2BEPos38xr4I2BmQwX3A044d1/fq29ZIE0fzJJAf7MqMuwzuf0dGUaTh/a0RVCiLtyqWHkWSbwrHZ3pQfR3OLBj6JKtuwDYKp4K4qwOYWAY0pWClNkyevHcC/G2IOXJ5JMF", size: '100x200' %>
                  <% end %>
                </div>

                <div class="large-8 columns">
                  <%= friendship.match_percent > 0.49 ? "Great Match" : "Feeling lucky?"%>
                  <div class="progress large-12 success">
                    <span class="meter" style="width: <%=friendship.match_percent*100%>%"></span>
                    <% friendship.match_percent %>
                  </div>
                </div>
              </div>

              <!-- - - - - - - - - - - - user name row + gamer tag + gamer reputation - - - - - - - -->
              <div class = "row">
                <div class = "large-12 columns">
                  <hr>
                  <p> Name: <%= link_to friendship.compared_user.name, user_path(friendship.compared_user.id) %></p>
                  <a href="#" data-reveal-id="myModal" class="button secondary small">Message Gamer</a>
                  <p>
                    <% if friendship.compared_user.xbox_gamer_info.present? %>
                      <%= "Xbox Live: #{friendship.compared_user.xbox_gamer_info.gamertag}" %>
                      <br>
                      <%= "Reputation: #{friendship.compared_user.xbox_gamer_info.reputation_score}" %>
                      <br>
                      <%= "Has Recently Played GTA V?: #{friendship.compared_user.xbox_gamer_info.hasgtav}" %>
                    <%end%>
                  </p>
                </div>
              </div>

              <!-- - - - - - - - - - - TIMEZONE ROW - - - - - - - - - - -->
              <div class="row">
                <div class = "large-12 columns">
                  <hr>
                  TimeZone: <%=Question.find(4).responses.find_by_user_id(current_user.id).answer.choice %>

                </div>
              </div>

              <!-- - - - - - - - - MESSAGE ME ROW - - - - - - - - - -  -->
              <div class="row">
                <div class = "large-12 columns">
                  <hr>
                  <!-- <a href="#" data-reveal-id="myModal" class="button secondary small">Message Gamer</a> -->
                </div>
              </div>
              <!-- - - - - - - - - - - - - - - - - - - - - - - - - - -->
            </div>
          </div>
        </li>
      <% end %>
    </ul>

  </div>
</div>







<div id="myModal" class="reveal-modal">
  <%= render '/shared/compose' %>
</div>




