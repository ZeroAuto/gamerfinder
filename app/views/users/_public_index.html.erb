</div>




<!-- - - - - - - - USER INFO GRID - - - - - - - - -->


<div class ="row">
  <div class = "large-12 columns">
    <div class = "newest-members">
      <h2> Newest Members of the Community </h2>
    </div>


    <ul class="large-block-grid-2">
      <% @users.last_four.each do |gamer| %>
        <li>
          <div class="panel-public">
            <div class="row">
              <div class="small-4 large-4 columns">
                <%= image_tag "https://photos-2.dropbox.com/t/0/AACyhLVNYiUHI6t49LYQqiQdEwBlocq4-yy0v16-9kSv3g/12/117545494/png/1024x768/3/1383757200/0/2/userplaceholder.png/WVtpc0oHx5Hbe5aJuwCPd389ThA1bzbqv_xW_h-09zM", size: '100x200' %>
              </div>

              <div class="small-8 large-8 columns">
                <h5><%= link_to gamer.name, user_path(gamer.id) %> </h5>
                <p>
                  <%if Question.find(2).responses.find_by_user_id(gamer.id).present? %>
                    <%= "#{Question.find(2).inquiry}: #{Question.find(2).responses.find_by_user_id(gamer.id).answer.choice}" %>
                    <% end %>
                </p>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

