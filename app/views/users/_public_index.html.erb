<!-- - - - - - - - USER INFO GRID - - - - - - - - -->


<div class ="row">
  <div class = "large-12 columns">
    <div class = "hero-99">
      <h2> Newest Members of Our Community </h2>
    </div>


    <ul class="large-block-grid-2">
      <% @users.each do |gamer| %>
        <li>
          <div class="panel-public">
            <div class="row">
              <div class="small-4 large-4 columns">
                <%= image_tag "userplaceholder.png", size: '100x200' %>
              </div>

              <div class="small-8 large-8 columns"> 
                <h5><%= link_to gamer.name, user_path(gamer.id) %> </h5>
                <p> 
                  <%if Question.find(2).responses.find_by_user_id(gamer.id).present? %>
                    <%= "#{Question.find(2).inquiry}: #{Question.find(2).responses.find_by_user_id(gamer.id).answer.choice}" %> 
                    <% end %>
                </p>
              </div>
            </div>     
          </div> 
        </li>
      <% end %>
    </ul>
  </div>
</div>

