<div><h3 class='subheader'><%= @conversation.subject   %></h3></div>

<div class="row">
  <% messages_in_conversation.each do |msg| %>
    <hr>
    <div class="small-4 large-3 columns">
        <p><img src="http://lazyreviewzzz.com/wp-content/uploads/2010/06/L.E.-Xbox-avatar-thumb.jpg"><%= msg.message.sender.name %></p>
    </div>
    <div class="small-8 large-9 columns"><p><%= msg.message.body %></p></div>
  <% end %>
</div>

<br> <i class="fa fa-reply"><%= link_to 'Reply', new_message_path(receiver: 1   , conversation: @conversation.id) %></i>
<i class="fa fa-trash-o"></i>
