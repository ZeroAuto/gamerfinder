<ul>
  <form action=<%="/users/#{current_user.id}/responses/bulk_update" %> method="put">
  <% @questions.each do |question| %>
    <li><%= question.inquiry %>
      <ul>
        <% question.answers.each do |answer| %>
          <li><label for="<%=question.id%>"><%=answer.choice%></label>
            <input
              type='radio'
              name="<%=question.id%>"
              value="<%=answer.id%>"
              <%= "checked" if current_user.responses.where(answer: answer).count > 0 %>
              />
          </li>
        <% end %>
      </ul>
    </li>
    <input type="hidden" value="<%=params[:user_id]%>">
  <% end %>
  <button type="submit">submit</button>
</form>
<%= params %>
</ul>
